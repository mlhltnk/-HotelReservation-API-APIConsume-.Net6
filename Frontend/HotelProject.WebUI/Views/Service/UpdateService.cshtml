@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<form method="post">
    <label>Hizmet İconu</label>
    <input type="hidden" asp-for="ServiceID"/>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <span asp-validation-for="ServiceIcon" class="text-info"></span>   @*BURASI DTODA YAZDIĞIN hata mesajlarının ŞEKLİNİ BELİRLER*@
    <br />
    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-info"></span>
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <span asp-validation-for="Title" class="text-info"></span>
    <br />
    <button class="btn btn-primary">Hizmeti Güncelle</button>
</form>


